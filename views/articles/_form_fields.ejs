<div class="form-group">
    <label for="title">Title</label>
    <input required type="text" name="title" value="<%= article.title %> " id="title" class="form-control"><br>
</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" cols="10" rows="10" class="form-control"><%= article.description %></textarea>
</div>
<br>

<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown"  cols="10" rows="10" class="form-control"><%= article.markdown %></textarea>
</div>
<br>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>
